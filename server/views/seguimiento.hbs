<h1>Seguimiento de Formación</h1>

<div class="overview">
    <h2>Resumen del Progreso</h2>
    <canvas id="progresoChart" width="400" height="200"></canvas>
</div>

<div class="employee-list">
    <h2>Empleados y Cursos</h2>
    <table>
        <tr>
            <th>Nombre del Empleado</th>
            <th>Curso</th>
            <th>Estado</th>
            <th>Fecha de Finalización Esperada</th>
        </tr>
        <!-- Ejemplo de filas de la tabla -->
        {{#each empleados}}
        <tr>
            <td>{{this.nombre}}</td>
            <td>{{this.curso}}</td>
            <td>{{this.estado}}</td>
            <td>{{this.fecha}}</td>
        </tr>
        {{/each}}
    </table>
</div>

<div class="statistics">
    <h2>Estadísticas de Formación</h2>
    <p>Total de Cursos en Progreso: {{totalCursosEnProgreso}}</p>
    <p>Total de Cursos Completados: {{totalCursosCompletados}}</p>
    <p>Duración Promedio de Cursos: {{duracionPromedioCursos}} semanas</p>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/app.js"></script>
